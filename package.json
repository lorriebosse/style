{
  "author": {
    "email": "peter@ptb.dev",
    "name": "Peter T Bosse II",
    "url": "https://ptb.dev/"
  },
  "bugs": {
    "url": "https://github.com/ptb/style/issues"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.10.0",
    "@typescript-eslint/parser": "5.10.0",
    "dts-bundle-generator": "6.4.0",
    "eslint": "7.32.0",
    "eslint-plugin-compat": "4.0.1",
    "eslint-plugin-fp": "2.3.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsdoc": "37.6.3",
    "eslint-plugin-json": "3.1.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-standard": "5.0.0",
    "nodemon": "2.0.15",
    "npm-run-all": "4.1.5",
    "prettier-eslint": "13.0.0",
    "prettier-eslint-cli": "5.0.1",
    "typescript": "4.5.5"
  },
  "eslintIgnore": [
    "style.*",
    "!src/**/*.js"
  ],
  "keywords": [
    "css",
    "css-in-js",
    "react",
    "styles"
  ],
  "license": "Apache-2.0",
  "maintainers": [
    {
      "email": "peter@ptb.dev",
      "name": "Peter T Bosse II",
      "url": "https://ptb.dev/"
    }
  ],
  "name": "@ptb/style",
  "nodemonConfig": {
    "delay": 2500,
    "events": {
      "start": "echo \"\\x1Bc\""
    },
    "exec": "npm-run-all clean lint tidy build strip",
    "ext": "js json ts",
    "verbose": true,
    "watch": [
      "package.json",
      "src"
    ]
  },
  "packageManager": "yarn@3.1.1",
  "prettier": {
    "arrowParens": "always",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxSingleQuote": false,
    "parser": "babel",
    "printWidth": 70,
    "proseWrap": "always",
    "requirePragma": false,
    "semi": false,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ptb/style"
  },
  "scripts": {
    "build": "tsc -p jsconfig.json && dts-bundle-generator --no-banner --out-file index.d.ts --project jsconfig.json src/style.js 2> /dev/null || true",
    "clean": "rm -rf types 2> /dev/null || true",
    "lint": "eslint --fix src",
    "strip": "sed -i'' -E -e 's/export type Params = Params;//' -e 's/export type PlainObject = PlainObject;//' -e 's/export type StylesObject = StylesObject;//' -e 's/`@media \\$\\{string}`/\"@media ${string}\"/' -e 's/`\\$\\{number}%`/\"${number}%\"/' -e 's/\\\\t/  /g' -e 's/ \\\\* /  /' -e 's/ *[@]typedef [{]import.*//' -e 's/\\\\/[*][*]/\\\\n\\\\n\\\\/**/' -e 's/[*]\\\\//*\\\\/\\\\n/' -e 's/export/\\\\nexport/' -e 's/export \\{};//' index.d.ts && sed -i'' -E -e '/^$/N;/^\\\\n$/D' index.d.ts && prettier-eslint --parser \"typescript\" --semi --write index.d.ts && sed -i'' -E -e 's/      \\\\/[*][*]/  \\\\/**/' -e 's/\\\"@media \\$\\{string}\\\"/`@media ${string}`/' -e 's/\\\"\\$\\{number}%\\\"/`${number}%`/' index.d.ts || true",
    "tidy": "prettier-eslint --write \"src/**/*.js\"",
    "watch": "nodemon"
  },
  "sideEffects": false,
  "type": "module",
  "types": "index.d.ts",
  "version": "0.0.6"
}
